# enable console
CONFIG_CONSOLE=y
CONFIG_SERIAL=y
CONFIG_UART_CONSOLE=y
# required for vuart
CONFIG_MAIN_STACK_SIZE=4096
# log backend
CONFIG_USE_SEGGER_RTT=y

# GPIO Controller
# CONFIG_GPIO=y

# Enable Clocks
#CONFIG_CLOCK_CONTROL=y

# Enable PVT sensor
CONFIG_SENSOR=y
CONFIG_RTIO=y
CONFIG_SENSOR_ASYNC_API=y

# enable i2c
CONFIG_I2C=y
CONFIG_I2C_DW_CLOCK_SPEED=50

# enable flash
CONFIG_FLASH=y

# enable external spi flash
CONFIG_FLASH_MSPI_NOR_RUNTIME_PROBE=y

# limit max read/write size to avoid SPI FIFO over/underruns
# Disable waiting between polling attempts to improve performance
CONFIG_FLASH_MSPI_NOR_READ_MAX=11
CONFIG_FLASH_MSPI_NOR_WRITE_MAX=11
CONFIG_FLASH_MSPI_NOR_LIMIT_POLLING=n

# enable the bh_arc library
CONFIG_TT_BH_ARC=y
# BH_ARC will raise system clock frequency, update it here
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=800000000

#enable pll
CONFIG_CLOCK_CONTROL=y
