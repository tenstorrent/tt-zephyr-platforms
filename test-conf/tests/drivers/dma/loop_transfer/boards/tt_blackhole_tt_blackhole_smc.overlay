/*
 * DTS overlay to expose the ARC DMA controller to the loop_transfer test
 * on the Tenstorrent Blackhole SMC platform.
 */

tst_dma0: &dma0 {
	dma-channels = <4>;
	status = "okay";
};

/*
 * added to prevent SRAM overflow errors
 */

&csm {
	reg = <0x10000000 0x40000>;
};
