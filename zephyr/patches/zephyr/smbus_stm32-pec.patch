+	if (data->config & SMBUS_MODE_PEC) {
+		/* The last message is just the PEC byte.*/
+		return num_msgs;
+	} else {
+		/* PEC message is not sent, next-to-last message is the final. */
+		return num_msgs - 1;
+	}
